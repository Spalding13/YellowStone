<% include ../partials/header %>

<div class="container text-center">
    <div class="d-flex justify-content-center mb-4 mt-5">
        <h1>Edit this campground</h1>
    </div>
    <div class="d-flex justify-content-center">
       <div class="col-5">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
            </div>
            <!-- file upload, then the form uses enctype="multipart/form-data"-->
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <!-- <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
            </div> -->
            <div class="form-group">
                <input class="form-control" type="number" value="<%= campground.price %>" placeholder="price" name="campground[price]" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.location %>" placeholder="Pleven, Bulgaria" name="campground[location]"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-md btn-block btn-primary">Submit</button>
            </div>

        </form>
        <a href="/campgrounds">Go Back</a>
    </div>  
</div>
</div>
</div>

<% include ../partials/footer %>