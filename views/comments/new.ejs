<% include ../partials/header %>

<div class="container text-center">
    <div class="d-flex justify-content-center mb-4 mt-5">
        <h1>Add New Comment to <%= campground.name %> </h1>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-5">
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-md btn-block btn-primary">Create</button>
                    </div>
            </form>
            <a href="/campgrounds">Go Back</a>
            </div>  
        </div>
    </div>
</div>
    
<% include ../partials/footer %>