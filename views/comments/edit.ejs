<% include ../partials/header %>

<div class="container text-center">
    <div class="d-flex justify-content-center mb-4 mt-5">
        <h1>Edit Comment</h1>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-5">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-md btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>     
    </div>
</div>

<% include ../partials/footer %>